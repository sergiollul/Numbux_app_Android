<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Theme.Numbux" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- black background everywhere -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Primary / accent colors -->
        <item name="colorPrimary">@color/orange_6300</item>
        <item name="colorPrimaryVariant">@color/orange_6300</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/orange_6300</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- For older widgets -->
        <item name="colorAccent">@color/orange_6300</item>

        <!-- Controls (switch thumb, sliders, text cursor) -->
        <item name="colorControlActivated">@color/orange_6300</item>
        <item name="android:colorControlActivated">@color/orange_6300</item>
    </style>

    <!-- Fullscreen variant -->
    <style name="Theme.Numbux.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Pin‐dialog variant -->
    <style name="Theme.Numbux.PinDialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowDisablePreview">true</item>

        <!-- re‐use your orange accent -->
        <item name="colorPrimary">@color/orange_6300</item>
        <item name="colorPrimaryVariant">@color/orange_6300</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange_6300</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/orange_6300</item>
        <item name="colorControlActivated">@color/orange_6300</item>
    </style>

    <!-- No‐shadow dialog style for Accessibility prompt -->
    <style name="NoShadowDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- transparent window -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- remove elevation/shadow -->
        <item name="android:windowElevation">0dp</item>
    </style>

</resources>
